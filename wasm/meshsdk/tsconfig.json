{
  "include": ["src"],
  "exclude": ["src/test"],
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib",
    "declarationDir": "lib",

    "target": "esnext",
    "module": "esnext",

    "lib": ["esnext", "dom"],
    "declaration": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
  }
}
